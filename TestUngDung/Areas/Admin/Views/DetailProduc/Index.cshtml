@model IEnumerable<ModelEF.Model.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}




@section header{
    <i class="fa fa-apple"></i>&nbsp; Chi Tiết Sản Phẩm
}

@using (Html.BeginForm("Index", "OrderDetailController", FormMethod.Post))
{
    <div class="col-lg-12 form-group">
        <div class="col-md-6">
            <a href="@Url.Action("Index","Product")" class="btn btn-danger">Quay Lại</a>
        </div>
        <div class="col-md-4">
        </div>
        <div class="col-md-2">
        </div>
    </div>
}
<div class="col-lg-12 form-group">
    <table class="table">
        <tr>
            <th>
                Mã sản phẩm
            </th>
            <th>
                Mã loại
            </th>
            <th>
                tên sản phẩm
            </th>
            <th>
                Đơn giá
            <th>
                Số lượng
            </th>
            <th>
                Image
            </th>
            <th>
                Trạng thái
            </th>
            <th>
                Mô Tả
            </th>
            <th>
                Màu Sắc
            </th>

        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @item.masp
        </td>
        <td>
            @item.maloai
        </td>
        <td>
            @item.tensp
        </td>
        <td>
            @item.dongia
        </td>
        <td>
            @item.soluong
        </td>
        <td>
            <img style="width:50px;height:50px" src="~/Upload/sanpham/@item.Image" />
        </td>
        <td>
            @item.trangthai
        </td>
       
        <td>
            @item.mota
        </td>
        <td>
            @item.mausac
        </td>
    </tr>
        }

    </table>
</div>